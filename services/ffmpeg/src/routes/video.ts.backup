      'X-Video-FPS': result.metadata.fps?.toString() || '',
      'X-Video-Codec': result.metadata.codec || ''
    });

    res.send(videoBuffer);

    // Clean up output file after sending
    fs.unlinkSync(outputPath);

  } catch (error) {
